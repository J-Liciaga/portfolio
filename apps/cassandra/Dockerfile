# Build the docker image with `npx nx docker-build cassandra`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t cassandra`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system cassandra && \
          adduser --system -G cassandra cassandra

COPY dist/apps/cassandra cassandra
RUN chown -R cassandra:cassandra .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix cassandra --omit=dev -f install

CMD [ "node", "cassandra" ]
